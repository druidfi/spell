{
  "name": "druidfi/spell",
  "description": "Spell to create a new Drupal 8 project based on druidfi/d8-template",
  "version": "1.0.0",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/druidfi/spell",
  "authors": [
    {
      "name": "Marko Korhonen",
      "email": "marko.korhonen@druid.fi"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.1",
    "druidfi/drupal-project": "dev-master"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:druidfi/drupal-project.git"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    },
    { "packagist": false }
  ],
  "scripts": {
    "post-create-project-cmd": [
      "rm *.md composer.* .gitignore",
      "shopt -s dotglob && mv vendor/druidfi/drupal-project/* .",
      "rm -rf vendor .git",
      "git init && git add ."
    ]
  }
}
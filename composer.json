{
  "name": "druidfi/spell",
  "description": "Spell to create a new Drupal 8 project based on druidfi/d8-template",
  "version": "1.0.0",
  "type": "project",
  "license": "MIT",
  "homepage": "https://github.com/druidfi/spell",
  "authors": [
    {
      "name": "Marko Korhonen",
      "email": "marko.korhonen@druid.fi"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.0",
    "composer/installers": "~1.0",
    "drush/drush": "~8.1 || >= 8.1.2",
    "druidfi/d8-template": "dev-composer-json",
    "oomphinc/composer-installers-extender": "~1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url":  "git@github.com:druidfi/d8-template.git"
    }
  ],
  "extra": {
    "installer-paths": {
      "dibbadabba": ["type:app-template"]
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "rm *.md composer.* .gitignore",
      "shopt -s dotglob && mv vendor/druidfi/d8-template/* .",
      "rm -rf vendor .git",
      "git init && git add .",
      "tools/init",
      "tools/build development"
    ]
  }
}